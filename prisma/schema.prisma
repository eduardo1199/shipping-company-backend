// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String   @db.Text
  password   String
  email      String?  @unique()
  avatar_url String?
  create_at  DateTime @default(now())

  role    Role[]
  Product Product[]

  @@map("users")
}

enum Role {
  USER
  ADMIN
  CONDUCTOR
}

model Vehicle {
  id         String   @id @default(uuid())
  name       String
  place      String
  chassis    String
  file_id    String
  created_at DateTime @default(now())

  conductor    Conductor @relation(fields: [conductor_id], references: [id])
  conductor_id String

  @@map("vehicle")
}

model Displacement {
  id          String   @id @default(uuid())
  destination String
  origin      String
  distance    Int
  created_at  DateTime @default(now())

  conductor    Conductor @relation(fields: [conductor_id], references: [id])
  conductor_id String

  @@map("displacement")
}

model Conductor {
  id         String   @id @default(uuid())
  name       String
  cpf        String
  email      String
  cat_hab    Int
  register   DateTime
  created_at DateTime @default(now())
  file_id    String

  Displacement Displacement[]
  Vehicle      Vehicle[]
  Product      Product[]

  @@map("conductor")
}

model Product {
  id     String  @id @default(uuid())
  name   String
  weight Int
  price  Decimal

  client  User   @relation(fields: [user_id], references: [id])
  user_id String

  conductor    Conductor @relation(fields: [conductor_id], references: [id])
  conductor_id String

  @@map("product")
}
